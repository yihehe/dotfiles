alias gitdf='git --git-dir=$HOME/.gitdf/ --work-tree=$HOME'

# revert .zshrc
mv ~/.zshrc ~/.zshrc.bak
sed "/^source ~\/.yihe_profile$/d" ~/.zshrc.bak > ~/.zshrc

if [ -s "~/.zshrc" ]
then
    rm ~/.zshrc.bak
else
    echo "something went wrong, ./.zshrc backed up in ./.zshrc.bak"
    exit 1
fi

# remove git repo
gitdf rm -r '*'
rm -rf ./.gitdf

