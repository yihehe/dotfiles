git clone --bare https://github.com/yihehe/dotfiles.git $HOME/.cfg

function gitdf {
   /usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME $@
}
gitdf checkout
gitdf config status.showUntrackedFiles no

# set up vimrc dirs
mkdir -p ~/.vim/backup
mkdir -p ~/.vim/swap
mkdir -p ~/.vim/undo

echo 'source ~/.yihe_profile\n' >> ~/.zshrc

source ~/.zshrc

